{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessCatch": "error",
        "noForEach": "error",
        "noUselessSwitchCase": "error"
      },
      "correctness": {
        "noUnusedLabels": "warn",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noUnreachable": "error",
        "useExhaustiveDependencies": "warn",
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noNonNullAssertion": "warn",
        "useConst": "warn",
        "noVar": "error"
      },
      "suspicious": {
        "recommended": true,
        "noArrayIndexKey": "warn"
      },
      "a11y": {
        "useButtonType": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "enabled": true,
    "lineEnding": "crlf"
  }
}
